#!/usr/bin/env bash
source "$(dirname "$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)")/config"
set -eo pipefail; [[ $DOKKU_TRACE ]] && set -x
source "$PLUGIN_BASE_PATH/common/functions"
source "$(dirname "$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)")/functions"

service-env() {
  #E Print, Set, or Unset environment variables in the $PLUGIN_COMMAND_PREFIX service
  #E Note that changing environment variables for a running container will cause it to restart
  #E Print all environment variables for $PLUGIN_COMMAND_PREFIX service greyskull
  #E dokku $PLUGIN_COMMAND_PREFIX:env greyskull
  #E Set environment variable "foo" with a value of "bar" inside $PLUGIN_COMMAND_PREFIX service greyskull
  #E dokku $PLUGIN_COMMAND_PREFIX:env greyskull set foo bar
  #E Unset environment variable "foo" inside $PLUGIN_COMMAND_PREFIX service greyskull
  #E dokku $PLUGIN_COMMAND_PREFIX:env greyskull unset foo
  declare desc="Print, Set, or Unset environment variables"
  local cmd="$PLUGIN_COMMAND_PREFIX:env" argv=("$@"); [[ ${argv[0]} == "$cmd" ]] && shift 1
  declare SERVICE="$1" ACTION="$2" ACTION_VALUES="$3"

  service_modify_env "$SERVICE" "$ACTION" "${@:3}"
}

service-env "$@"
