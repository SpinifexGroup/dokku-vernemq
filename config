#!/usr/bin/env bash
export VERNEMQ_IMAGE=${VERNEMQ_IMAGE:="erlio/docker-vernemq"}
export VERNEMQ_IMAGE_VERSION=${VERNEMQ_IMAGE_VERSION:="latest"}
export VERNEMQ_ROOT=${VERNEMQ_ROOT:="/var/lib/dokku/services/vernemq"}

export PLUGIN_COMMAND_PREFIX="vernemq"
export PLUGIN_CONFIG_ROOT=${PLUGIN_CONFIG_ROOT:="$DOKKU_LIB_ROOT/config/$PLUGIN_COMMAND_PREFIX"}
export PLUGIN_DATA_ROOT=$VERNEMQ_ROOT
export PLUGIN_DATASTORE_PORTS=(1883 8080 8883)
export PLUGIN_DATASTORE_WAIT_PORT=1883
export PLUGIN_DEFAULT_ALIAS="VERNEMQ"
export PLUGIN_ALT_ALIAS="DOKKU_VERNEMQ"
export PLUGIN_IMAGE=$VERNEMQ_IMAGE
export PLUGIN_IMAGE_VERSION=$VERNEMQ_IMAGE_VERSION
export PLUGIN_SCHEME="tcp"
export PLUGIN_SERVICE="Vernemq"
export PLUGIN_VARIABLE="VERNEMQ"
export PLUGIN_BASE_PATH="$PLUGIN_PATH"
if [[ -n $DOKKU_API_VERSION ]]; then
  export PLUGIN_BASE_PATH="$PLUGIN_ENABLED_PATH"
fi

if [[ -d "$PLUGIN_DATA_ROOT/*" ]]; then
  rm -rf "${PLUGIN_DATA_ROOT:?}/*"
fi
